# Current Working Directory

export WD='portfolio'


# LOS IDM variables
alias golos='cd ${HOME}/Documents/developer/LOS'
export NPM_AUTH_TOKEN=$(cat $HOME/.npmrc | grep _authToken | cut -d '=' -f2)
export NODE_ENV=development

# Environment Aliases
alias ld="ls -ld */"  # See only directories
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

if [ '$OS' = 'Linux' ]; then
alias ls='ls --color=auto'
fi

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Cuz fuck .DS_Store
alias cleanupds="find . -type f -name '*.DS_Store' -ls -delete"

# Ask the computer nicely...
alias plz="sudo"

# Display all aliases
alias listaliases="alias | sed 's/=.*//'"

# I wanna go fast
alias speedtest="wget -O /dev/null http://speed.transip.nl/100mb.bin"

# ---------- Workspace Aliases ----------

alias gpd='cd ~/Documents/developer/projects'
alias gwd='cd ~/Documents/developer/projects/$WD'

alias editbash='atom ~/.dotfiles'
alias bn='babel-node $argv'


# --------- Git Aliases ---------

alias ga='git add $argv'
alias gst='git status'
alias gp='git push $argv'
alias gl='git pull $argv'
alias gb='git branch $argv'
alias gc='git commit $argv'
alias gco='git checkout $argv'

alias grv='git remote -v'
alias gbv='git branch -vv'
alias glog='git log --oneline --decorate --graph'
